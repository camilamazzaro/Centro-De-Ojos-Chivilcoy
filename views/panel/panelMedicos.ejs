<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../commons/head', { title: 'Portal Médico' }) %>
    <link rel="stylesheet" href="/public/css/panel/panel_medicos.css">
</head>
<body>

    <div class="contenedor-flex">
        <div class="contenedor-barra-lateral">
             <%- include('../commons/barra-lateral-medicos') %>
        </div>

        <div class="contenedor-panel-general">
            
            <div class="header-medico">
                <div class="saludo">
                    <h1>Dr/a. <%= usuario.nombre.split(' ').slice(-1) %></h1> <p class="fecha-hoy"><i class="fa-regular fa-calendar"></i> <%= new Date().toLocaleDateString('es-AR', {weekday:'long', day:'numeric', month:'long'}) %></p>
                </div>
                <div class="kpi-container">
                    <div class="kpi-card">
                        <span class="numero"><%= stats.totalHoy %></span>
                        <span class="label">Pacientes Hoy</span>
                    </div>
                </div>
            </div>

            <div class="grid-medico">
                
                <div class="col-principal">
                    
                    <% if (proximoPaciente) { %>
                        <div class="card-proximo-paciente">
                            <div class="titulo-card">
                                <i class="fa-solid fa-user-clock"></i> A continuación
                            </div>
                            <div class="info-paciente-grande">
                                <div class="avatar-placeholder">
                                    <%= proximoPaciente.nombre_paciente.charAt(0) %>
                                </div>
                                <div class="datos">
                                    <h2><%= proximoPaciente.nombre_paciente %></h2>
                                    <p class="dni">DNI: <%= proximoPaciente.dni %></p>
                                    <div class="hora-turno">
                                        <i class="fa-regular fa-clock"></i> 
                                        <%= new Date(proximoPaciente.fecha_hora).toLocaleTimeString('es-AR', {hour:'2-digit', minute:'2-digit'}) %> hs
                                    </div>
                                    <p class="motivo">Práctica: <strong><%= proximoPaciente.nombre_practica || 'Consulta General' %></strong></p>
                                </div>
                            </div>
                            <div class="acciones-paciente">
                                <a href="/paciente/historias-clinicas/<%= proximoPaciente.id_paciente %>" class="btn-primario">Ver Historia</a>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="card-proximo-paciente vacio">
                            <i class="fa-solid fa-mug-hot"></i>
                            <h3>No hay pacientes próximos asignados por ahora.</h3>
                        </div>
                    <% } %>


                </div>

                <div class="col-lateral">
                    <div class="card-agenda">
                        <h3>Agenda de Hoy</h3>
                        <div class="lista-agenda">
                            <% if (turnosHoy.length > 0) { %>
                                <% turnosHoy.forEach(turno => { 
                                    const esProximo = proximoPaciente && turno.id === proximoPaciente.id;
                                    const yaPaso = turno.id_estado_turno === 4; // Completado
                                %>
                                    <div class="item-agenda <%= esProximo ? 'activo' : '' %> <%= yaPaso ? 'pasado' : '' %>">
                                        <div class="hora">
                                            <%= new Date(turno.fecha_hora).toLocaleTimeString('es-AR', {hour:'2-digit', minute:'2-digit'}) %>
                                        </div>
                                        <div class="detalle">
                                            <strong><%= turno.nombre_paciente %></strong>
                                            <span><%= turno.nombre_practica || 'Consulta' %></span>
                                        </div>
                                        <div class="estado-dot"></div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p class="text-center p-3">Agenda libre hoy.</p>
                            <% } %>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-panel mt-4">
                        <h3><i class="fa-solid fa-calendar-days"></i> Próximos Turnos (Agenda Futura)</h3>
                        <div class="table-responsive">
                            <table class="tabla-simple">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Paciente</th>
                                        <th>Motivo</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (proximosTurnos && proximosTurnos.length > 0) { %>
                                        <% proximosTurnos.forEach(turno => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= new Date(turno.fecha_hora).toLocaleDateString('es-AR', {day:'2-digit', month:'2-digit'}) %></strong>
                                                </td>
                                                <td>
                                                    <%= new Date(turno.fecha_hora).toLocaleTimeString('es-AR', {hour:'2-digit', minute:'2-digit'}) %> hs
                                                </td>
                                                <td><%= turno.nombre_paciente %></td>
                                                <td><%= turno.nombre_practica || 'Consulta' %></td>
                                                <td>
                                                    <% if (turno.id_estado_turno == 3) { %>
                                                        <span style="color: #198754; font-weight: bold;">Confirmado</span>
                                                    <% } else { %>
                                                        <span style="color: #ffc107; font-weight: bold;">Reservado</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-3">No hay turnos próximos agendados.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <div class="footer-card">
                            <a href="/panelMedicos/calendarioTurnos" class="btn">Ver Agenda Completa →</a>
                        </div>
                    </div>
        </div>
    </div>
</body>
</html>