<!--Para que la página active quede subrayada-->
<script>
    // Obtener la URL actual
    const currentLocation = window.location.pathname;

    // Obtener todos los enlaces
    const navLinks = document.querySelectorAll('header nav ul li a');

    navLinks.forEach(link => {
        // Comprobar si el href del enlace coincide con la URL actual
        if (link.getAttribute('href') === currentLocation || 
            (currentLocation === '/' && link.getAttribute('href') === '/home.html')) { // Para manejar el caso del home
            link.classList.add('active'); // Agregar clase active al enlace actual
        }
    });

    // Este script le suma la clase cuando el scroll pasa cierta altura (ej. 50px)

        const header = document.querySelector('header');
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const menuHamburguesa = document.querySelector(".icon-menu");
        const header = document.querySelector("header"); 
    
        menuHamburguesa.addEventListener("click", function () {
            header.classList.toggle("desplegado");
            
            // Cambiar el ícono de hamburguesa a cruz (X) y viceversa
            const icon = menuHamburguesa.querySelector("i");
            if (header.classList.contains("desplegado")) {
                icon.classList.remove("fa-bars");
                icon.classList.add("fa-xmark"); 
            } else {
                icon.classList.remove("fa-xmark");
                icon.classList.add("fa-bars");
            }
        });

        const enlaces = document.querySelectorAll(".menu-responsive a");
        enlaces.forEach(link => {
            link.addEventListener("click", () => {
                header.classList.remove("desplegado");
                const icon = menuHamburguesa.querySelector("i");
                icon.classList.remove("fa-xmark");
                icon.classList.add("fa-bars");
            });
        });
    });    
</script>
