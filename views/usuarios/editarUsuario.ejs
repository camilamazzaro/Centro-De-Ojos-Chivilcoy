<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro Usuarios</title>
    <link rel="stylesheet" href="/public/css/usuarios.css">
    <%- include('../commons/head') %>
</head>
<body>
    <div class="contenedor-flex">
        <div class="contenedor-barra-lateral">
            <%- include('../commons/barra-lateral-admin') %>
        </div>

        <div class="contenedor-editar">
            <div class="container contenedor-formulario-editar">
                <h1>Editar usuarios</h1>
                <div class="formulario-editar">
                    
                    <div class="form-group">
                        <label>Nombre</label>
                        <input id="usuario_nombre" value="<%= usuario.nombre %>" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label>Email</label>
                        <input id="usuario_email" value="<%= usuario.email %>" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label>Password</label>
                        <input id="usuario_password" type="password" value="<%= usuario.id === 0 ? '':'*******' %>" class="form-control">
                    </div>
                    

                    <div class="form-group">
                        <label>Categoria</label> 
                        <select id="usuario_categoria" class="form-select"> 
                            <% categorias.forEach((categoria) => { %>
                                <option value="<%= categoria.id %>" <%= (categoria.id == usuario.id_categoriaUsuario) ? 'selected' : '' %> >
                                    <%= categoria.categoria %>
                                </option>
                            <% }) %>
                        </select>         
                    </div>
                    
                    <div class="botones">
                        <button type="button" class="btn btn-guardar" id="guardar">Guardar Usuario</button>
                        <a href="/usuarios" class="btn btn-cancelar">Cancelar</a>
                    </div>
                    
                </div>
            </div>
            
        </div>
    </div>
    
    <script>
        const botonGuardar = document.querySelector("#guardar");
    
        const usuarioNombre = document.querySelector("#usuario_nombre");
        const usuarioEmail = document.querySelector("#usuario_email");
        const usuarioPassword = document.querySelector("#usuario_password");
        const usuarioCategoria = document.querySelector("#usuario_categoria");
    
        botonGuardar.addEventListener("click", async (e) => {
            e.preventDefault();
    
            const nombre = usuarioNombre.value.trim();
            const email = usuarioEmail.value.trim();
            const password = usuarioPassword.value;
            const categoria = usuarioCategoria.value;
    
            // Validar campos obligatorios
            if (!nombre || !email || !categoria) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Campos incompletos',
                    text: 'Todos los campos son requeridos.',
                    confirmButtonColor: '#f39c12',
                    confirmButtonText: 'Aceptar'
                });
                return;
            }
    
            // Validar nombre completo (al menos dos palabras)
            const nombrePalabras = nombre.split(" ");
            if (nombrePalabras.length < 2) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Nombre incompleto',
                    text: 'Por favor, ingres치 nombre y apellido.',
                    confirmButtonColor: '#f39c12',
                    confirmButtonText: 'Aceptar'
                });
                return;
            }
    
            // Validar formato de email
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Email inv치lido',
                    text: 'Ingres치 un email con el formato correcto (ej: ejemplo@correo.com).',
                    confirmButtonColor: '#f39c12',
                    confirmButtonText: 'Aceptar'
                });
                return;
            }
    
            try {
                const results = await fetch(`/usuario/editar/<%= usuario.id %>`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        id: "<%= usuario.id %>",
                        nombre,
                        email,
                        password,
                        categoria
                    })
                });
    
                const data = await results.json();
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Usuario actualizado',
                        text: 'Los datos se guardaron correctamente.',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Aceptar'
                    }).then(() => {
                        location.href = "/usuarios";
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No se pudieron actualizar los valores.',
                        confirmButtonColor: '#d33',
                        confirmButtonText: 'Cerrar'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error de conexi칩n',
                    text: 'No se pudo conectar con el servidor.',
                    confirmButtonColor: '#d33',
                    confirmButtonText: 'Cerrar'
                });
            }
        });
    </script>    
    
</body>
</html>