<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro Usuarios</title>
    <link rel="stylesheet" href="/public/css/usuarios.css">
    <%- include('../commons/head') %>
</head>
<body>
    <div class="d-flex">
        <div class="contenedor-barra-lateral">
            
        </div>

        <div class="contenedor-listado-usuarios flex-fill">
            <div class="contenedor mt-5 container-listado-usuarios container">
                <h1 class="text-center my-4">Listado de Usuarios</h1>

                <!-- Botones de filtro -->
                <div class="text-center mb-4">
                    <button class="filtro-btn btn-sombreado seleccionado" data-categoria="todos">Todos</button>
                    <button class="filtro-btn btn-sombreado" data-categoria="Administradores">Administradores</button>
                    <button class="filtro-btn btn-sombreado" data-categoria="Médicos">Médicos</button>
                    <button class="filtro-btn btn-sombreado" data-categoria="Secretarias">Secretarias</button>

                </div>

                <div class="contenedor-usuarios">
                    <table class="tabla-listado-usuarios">

                        <tbody id="tabla-usuarios">
                            <% usuarios.forEach(function(user) { %>
                                <tr class="usuario-fila" data-categoria="<%= user.categoria %>">
                                    <td style="font-weight: 700; color: #005b6f; font-size: 20px;"><%= user.id %></td>
                                    <td><%= user.nombre %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <%= user.categoria %>
                                    </td>
                                    <td class="acciones">
                                        <a class="btn-editar" href="/usuario/editar/<%= user.id %>">
                                            <i class="fa-regular fa-pen-line"></i>
                                            Editar
                                        </a>
                                        <a class="btn-eliminar borrarUsuario" data-id="<%= user.id %>">
                                            <i class="fa-regular fa-trash-can"></i>
                                            
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                        
                    </table>
                </div>

                <!-- Botón que lleva a una sección con id="contacto" -->
                <a href="/usuario/agregar/0" class="btn-crear">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" 
                        stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" 
                            d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                    </svg>
                    <div class="text">Nuevo Usuario</div>
                </a>

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Funcionalidad para eliminar usuarios
        document.querySelectorAll('.borrarUsuario').forEach(button => {
        button.addEventListener('click', async () => {
            const userId = button.getAttribute('data-id');

            const resultado = await Swal.fire({
                title: '¿Estás seguro?',
                text: "Esta acción no se puede deshacer.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            });

            if (resultado.isConfirmed) {
                try {
                    const response = await fetch(`/usuario/eliminar/${userId}`, {
                        method: 'DELETE'
                    });

                    const data = await response.json();

                    if (data.success) {
                        Swal.fire({
                            title: 'Eliminado',
                            text: 'El usuario fue eliminado correctamente.',
                            icon: 'success',
                            confirmButtonText: 'Aceptar'
                        }).then(() => location.reload());
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: 'No se pudo eliminar el usuario.',
                            icon: 'error',
                            confirmButtonText: 'Aceptar'
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        title: 'Error de conexión',
                        text: 'No se pudo conectar con el servidor.',
                        icon: 'error',
                        confirmButtonText: 'Aceptar'
                    });
                }
            }
        });
    });

        // Funcionalidad de filtrado de usuarios
        document.querySelectorAll('.filtro-btn').forEach(button => {
            button.addEventListener('click', () => {
                const categoriaSeleccionada = button.getAttribute('data-categoria');
                const filasUsuarios = document.querySelectorAll('.usuario-fila');
                
                // Filtrar las filas según la categoría seleccionada
                filasUsuarios.forEach(fila => {
                    const categoriaFila = fila.getAttribute('data-categoria');
                    if (categoriaSeleccionada === "todos" || categoriaFila === categoriaSeleccionada) {
                        fila.style.display = ""; // Mostrar fila
                    } else {
                        fila.style.display = "none"; // Ocultar fila
                    }
                });
                
                // Remover la clase 'seleccionado' de todos los botones
                document.querySelectorAll('.filtro-btn').forEach(btn => {
                    btn.classList.remove('seleccionado');
                });
                
                // Agregar la clase 'seleccionado' al botón clicado
                button.classList.add('seleccionado');
            });
        }); 
        
    </script>
</body>
</html>