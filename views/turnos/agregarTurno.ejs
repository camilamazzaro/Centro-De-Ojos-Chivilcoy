<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../commons/head') %>
    <link rel="icon" href="/public/img/Icono redondeado CMV .png" type="image/x-icon">
    <link rel="stylesheet" href="/public/css/turnos.css">
    <title>Agregar turno</title>
</head>

<body>
    <div class="contenedor-flex">
        <div class="contenedor-barra-lateral">
            <% if (categoria === 1) { %>
                <%- include('../commons/barra-lateral-admin') %>
            <% } else if (categoria === 3) { %>
                <%- include('../commons/barra-lateral-secretarias') %>
            <% } else if (categoria === 2) { %>
                <%- include('../commons/barra-lateral-medicos') %>
            <% } else { %>
                <p>No tienes permisos para ver este contenido.</p>
            <% } %>
        </div>

        <div class="contenedor-agregar">
            <div class="container my-5 contenedor-agregar-turno">
                <div class="contenedor-titulo-boton">
                    <div>
                        <a href="/turnos" class="btn btn-volver"><i class="fa-solid fa-arrow-left"></i>  Volver a Turnos</a>
                    </div>
                    <h1 class="mb-4">Agregar Turno</h1>
                </div>
                
                <form class="formulario-agregar-turno">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label for="medico_nombre" class="form-label">Médico</label>
                            <select class="form-select" id="medico_nombre" name="medico_nombre">
                                <option value="" selected>Seleccione un médico</option>
                                <% medicos.forEach((medico) => { %>
                                    <% 
                                    let selected = '';
                                    if (turno.id_medico && medico.id && turno.id_medico.toString() === medico.id.toString()) {
                                        selected = 'selected';
                                    }
                                    %>
                                    <option value="<%= medico.id %>" <%= selected %>>
                                        <%= medico.nombre_medico %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label for="paciente_nombre" class="form-label">Paciente</label>
                            <select class="form-select" id="paciente_nombre" name="paciente_nombre">
                                <% pacientes.forEach((paciente) => { %>
                                    <option value="<%= paciente.id %>" <%= turno.id_paciente == paciente.id ? 'selected' : '' %> >
                                        <%= paciente.nombre %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label for="practica" class="form-label">Práctica</label>
                            <select class="form-select" id="practica" name="practica">
                                <% if(practicas && practicas.length > 0) { %>
                                    <% practicas.forEach((practica) => { %>
                                        <option value="<%= practica.id %>" <%= turno.id_practica == practica.id ? 'selected' : '' %> >
                                            <%= practica.nombre %>
                                        </option>
                                    <% }) %>
                                <% } else { %>
                                    <option value="">Seleccione una práctica</option>
                                <% } %>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <% let date = new Date(turno.fecha_hora) %>
                        <div class="col-md-3">
                            <label for="fecha" class="form-label">Fecha</label>
                            <input class="form-control" id="fecha" type="date" value="<%= !isNaN(date) ? date.toISOString().split('T')[0] : '' %>">
                        </div>

                        <div class="col-md-3">
                            <label for="hora" class="form-label">Hora</label>
                            <input class="form-control" id="hora" type="time" value="<%= !isNaN(date) ? date.toTimeString().split(' ')[0].substring(0, 5) : '' %>">
                        </div>

                        <div class="col-md-3">
                            <input type="hidden" id="id_estadoTurno" name="estado_turno" value="3">
                        </div>
                    </div>
                </form>

                <div class="d-flex botones gap-2 mt-3">
                    <a href="/turnos" class="btn btn-cancelar text-decoration-none">Cancelar</a>
                    <button type="button" class="btn btn-guardar guardar">Guardar</button>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const medicoSelect = document.querySelector("#medico_nombre");
            const practicaSelect = document.querySelector("#practica");
            const fechaInput = document.querySelector("#fecha");
            const horaInput = document.querySelector("#hora");

            medicoSelect.addEventListener("change", async () => {
                const medicoId = medicoSelect.value;
        
                // Borrar las prácticas actuales
                practicaSelect.innerHTML = '<option value="">Seleccione una práctica</option>';
        
                if (medicoId) {
                    
                    // CORRECCIÓN 2: Eliminamos la lógica que borraba la fecha si no era el médico 1.
                    // Solo mantenemos la lógica especial si QUIERES autocompletar 'ahora' para el médico 1
                    if (medicoId == 1 && !fechaInput.value) { 
                        // Solo autocompleta si la fecha ESTÁ VACÍA. Si viene del calendario, no la toca.
                        const now = new Date();
                        fechaInput.value = now.toISOString().split('T')[0];
                        horaInput.value = now.toTimeString().split(' ')[0].substring(0, 5);
                    } 
                    // El 'else { fechaInput.value = "" }' SE ELIMINÓ para no perder datos del calendario

                    try {
                        // Carga dinámica de prácticas (AJAX)
                        const response = await fetch(`/practicas/${medicoId}`);
                        if (response.ok) {
                            const practicas = await response.json();
                            practicas.forEach(practica => {
                                const option = document.createElement("option");
                                option.value = practica.id;
                                option.textContent = practica.nombre;
                                practicaSelect.appendChild(option);
                            });
                        }
                    } catch (error) {
                        console.error("Error al cargar las prácticas:", error);
                    }
                }
            });
        });

        // Script del botón guardar
        const botonGuardar = document.querySelector(".guardar");

        botonGuardar.addEventListener("click", async () => {
            const turnoMedico = document.querySelector("#medico_nombre").value;
            const turnoPaciente = document.querySelector("#paciente_nombre").value;
            const turnoPractica = document.querySelector("#practica").value;
            const turnoFecha = document.querySelector("#fecha").value;
            const turnoHora = document.querySelector("#hora").value;
            const turnoId_estadoTurno = document.querySelector("#id_estadoTurno").value;
            
            if (!turnoMedico || !turnoPaciente || !turnoFecha || !turnoHora) {
                Swal.fire('Atención', 'Por favor, complete todos los campos.', 'warning');
                return;
            }

            // Combinamos fecha y hora para enviar al backend
            const fechaCompleta = `${turnoFecha} ${turnoHora}`;

            const datos = {
                id: <%= turno.id || 0 %>, // Aseguramos que si no hay ID sea 0
                id_medico: turnoMedico,
                id_paciente: turnoPaciente,
                id_practica: turnoPractica,
                fecha_hora: fechaCompleta,
                id_estadoTurno: turnoId_estadoTurno
            };
            
            try {
                const results = await fetch('/turnos/agregar/0', {
                    method: 'POST',
                    body: JSON.stringify(datos),
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await results.json();
                
                if (data.success === true) {
                    Swal.fire({
                        title: 'Turno Guardado',
                        text: 'El turno se guardó exitosamente',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            location.href = "/turnos";
                        }
                    });
                } else {
                    Swal.fire('Error', data.message || "Hubo un problema al guardar", 'error');
                }
            } catch(e) {
                console.error(e);
                Swal.fire('Error', 'Error de conexión', 'error');
            }
        });
    </script>
</body>
</html>