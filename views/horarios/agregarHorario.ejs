<!DOCTYPE html>
<html lang="es">

<!--HEAD-->
<head>
    <link rel="stylesheet" href="/public/css/horarios.css">
</head>
<%- include('../commons/head') %>
<title>Agregar horario</title>

<body>
    <div class="contenedor-flex">
        <div class="contenedor-barra-lateral">
            <!-- Mostrar el menú correspondiente basado en el idCategoriaUsuario -->
            <%- include('../commons/barra-lateral-admin') %>
        </div>
        <div class="contenedor-agregar">
            <div class="container mt-5 contenedor-agregar-horario" style="margin-top: 2em; box-shadow: none; background: none !important;">
                <h1 class="text-center mb-4">Agregar Horario</h1>
        
                <!-- Listado de horarios -->
                <div class="listado-horarios" style="margin-bottom: 2em;">
                    <% const diasSemana = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado"]; %>
                    <% diasSemana.forEach((dia, index) => { %>
                        <div class="tarjeta-horario">
                            <h3><%= dia %></h3>
                            <div class="horarios">
                                <% const horariosDia = horarios.filter(horario => horario.dia_semana.toLowerCase() === dia.toLowerCase()); %>
                                <% if (horariosDia.length > 0) { %>
                                    <% horariosDia.forEach(horario => { %>
                                        <div class="horario-item">
                                            <p><%= horario.hora_inicio %> a <%= horario.hora_fin %></p>

                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="mensaje-vacio">No hay horarios disponibles.</p>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
        
                <!-- Formulario para agregar un nuevo horario -->
                <form style="background-color: #fff;">
                    <table class="table table-bordered tabla-agregar-horario">
                        <thead class="thead-dark">
                            <tr>
                                <th>Día de la Semana</th>
                                <th>Hora de Inicio</th>
                                <th>Hora de Fin</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        <select class="form-select" id="dia_semana" name="dia_semana">
                                            <option value="Lunes">Lunes</option>
                                            <option value="Martes">Martes</option>
                                            <option value="Miércoles">Miércoles</option>
                                            <option value="Jueves">Jueves</option>
                                            <option value="Viernes">Viernes</option>
                                            <option value="Sábado">Sábado</option>
                                            <option value="Domingo">Domingo</option>
                                        </select>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input class="form-control" id="hora_inicio" type="time" required>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input class="form-control" id="hora_fin" type="time" required>
                                    </div>
                                </td>
                                <td class="horarios-acciones">
                                    <button type="button" class="btn btn-guardar guardar">Guardar</button>
                                    <button type="button" class="btn btn-cancelar">
                                        <a href="/medico/<%= horario.medicoId %>/horarios" >Cancelar</a>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>

                <a href="/medico/<%= horario.medicoId %>/horarios" class="btn btn-volver"><i class="fa-solid fa-arrow-left"></i> Volver Atrás</a>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const botonGuardar = document.querySelector(".guardar");

        botonGuardar.addEventListener("click", async () => {
            const diaSemana = document.querySelector("#dia_semana").value;
            const horaInicio = document.querySelector("#hora_inicio").value;
            const horaFin = document.querySelector("#hora_fin").value;
            // Obtener el ID del médico de la URL
            const pathParts = window.location.pathname.split('/');
            const medicoId = pathParts[2]; // Toma el ID del médico de la ruta
            const datos = {
                dia_semana: diaSemana,
                hora_inicio: horaInicio,
                hora_fin: horaFin,
                id_medico: medicoId,
                id: 0 // Esto indica que estamos creando un nuevo horario
            };

            const results = await fetch(`/medico/${medicoId}/horarios/agregar`, {
                method: 'POST',
                body: JSON.stringify(datos),
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            const data = await results.json();
            if (data.success === true) {
                Swal.fire({
                    title: 'Horario Guardado',
                    text: 'El horario se guardó exitosamente',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        location.reload(); // Recarga la página actual
                    }
                });
            } else {
                alert("Hubo un problema con los valores");
            }
        });
    </script>
</body>
</html>
