<!DOCTYPE html>
<html lang="es">
<!--HEAD-->
<head>
    <link rel="stylesheet" href="/public/css/horarios.css">
</head>
<%- include('../commons/head') %>
<title>Listar horarios</title>

<body>
    <div class="contenedor-flex">
        <!-- Barra lateral -->
        <div class="contenedor-barra-lateral">
            <!-- Mostrar el menú correspondiente basado en el idCategoriaUsuario -->
            <% if (categoria  === 1) { %>
                <%- include('../commons/barra-lateral-admin') %> <!-- Menú para administradores -->
            <% } else if (categoria  === 3) { %>
                <%- include('../commons/barra-lateral-secretarias') %> <!-- Menú para secretarias -->
            <% } else if (categoria === 2) { %>
                <%- include('../commons/barra-lateral-medicos') %> <!-- Menú para médicos -->
            <% } else { %>
                <p>No tienes permisos para ver este contenido.</p>
            <% } %>
        </div>

        <!-- Contenido principal -->
        <main class="contenedor-listado">
            <div class="container mt-5 container-listado-horarios">
                <h1>Horarios de <%= horarios.length ? horarios[0].nombre_medico : '' %></h1>

                <!-- Contenedor de tarjetas en dos filas -->
                <div class="listado-horarios">
                    <% const diasSemana = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado"]; %>
                    <% diasSemana.forEach((dia, index) => { %>
                        <div class="tarjeta-horario">
                            <h3><%= dia %></h3>
                            <div class="horarios">
                                <% 
                                    const horariosDia = horarios.filter(horario => {

                                        const diaBD = horario.dia_semana.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase().trim();

                                        const diaArray = dia.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase().trim();
                                        
                                        return diaBD === diaArray;
                                    }); 
                                %>
                                <% if (horariosDia.length > 0) { %>
                                    <% horariosDia.forEach(horario => { %>
                                        <div class="horario-item">
                                            <p><%= horario.hora_inicio %> a <%= horario.hora_fin %></p>
                                            <div>
                                                <a href="/medico/<%= medicoId %>/horarios/editar/<%= horario.id %>" class="icono-editar"><i class="fa-regular fa-pen-line"></i></a>
                                                <button class="icono-eliminar btnEliminar" data-id="<%= horario.id %>"><i class="fa-regular fa-trash-can"></i></button>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="mensaje-vacio">No hay horarios disponibles.</p>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- Botones de acción -->
                <div class="botones-acciones">
                    <a href="/medicos" class="btn btn-volver"><i class="fa-solid fa-arrow-left"></i> Volver Atrás</a>
                    <a href="/medico/<%= medicoId %>/horarios/agregar" class="btn btn-agregar">Agregar Nuevo Horario</a>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.btnEliminar').forEach(button => {
            button.addEventListener('click', async () => {
                const horarioId = button.getAttribute('data-id');  // Captura el ID del horario desde el botón
                const medicoId = '<%= medicoId %>';  // Obtiene el ID del médico desde el backend
                
                if (horarioId && medicoId) {  // Verifica que ambos IDs existan
                    // Mostrar SweetAlert de confirmación
                    const result = await Swal.fire({
                        title: '¿Estás seguro de eliminar?',
                        text: 'No podrás revertir esta acción.',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar'
                    });

                    if (result.isConfirmed) {
                        // Realizar la eliminación si el usuario confirma
                        const response = await fetch(`/medico/${medicoId}/horarios/eliminar/${horarioId}`, {
                            method: 'DELETE'
                        });
                        
                        // Si la eliminación es exitosa, recargar la página
                        if (response.ok) {
                            const result = await response.json();
                            if (result.success) {
                                Swal.fire('Eliminado!', 'El horario ha sido eliminado.', 'success');
                                location.reload();  // Recarga la página para actualizar la lista de horarios
                            } else {
                                Swal.fire('Error!', result.message, 'error');
                            }
                        } else {
                            Swal.fire('Error!', 'No se pudo eliminar el horario. Intenta nuevamente.', 'error');
                        }
                    }
                } else {
                    Swal.fire('Error!', 'No se pudo encontrar el ID del horario o del médico.', 'error');
                }
            });
        });

    </script>
</body>
</html>
